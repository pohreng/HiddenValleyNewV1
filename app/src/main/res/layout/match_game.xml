<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_marginTop="50dp">
 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal">

         <TextView
             android:id="@+id/pointsIn"
             android:fontFamily="fantasy"
             android:textSize="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/point_per_question" />
         <TextView
             android:gravity="left"
             android:id="@+id/totalPointIncreased"
             android:fontFamily="fantasy"
             android:textSize="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="10" />
 </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

        </LinearLayout>
        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">

                <Button
                            android:background="@drawable/question_img"
                            android:layout_margin="2dp"
                            android:id="@+id/iv_11"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerInside"
                            />
                <Button
                            android:background="@drawable/question_img"
                            android:layout_margin="2dp"
                            android:id="@+id/iv_12"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerInside"
                            />
                <Button
                            android:background="@drawable/question_img"
                            android:layout_margin="2dp"
                            android:id="@+id/iv_13"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerInside"
                            />
                <Button
                            android:background="@drawable/question_img"
                            android:layout_margin="2dp"
                            android:id="@+id/iv_14"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerInside"
                            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/question_img"
                    android:layout_margin="2dp"
                    android:id="@+id/iv_21"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"
                    />
            <Button
                android:background="@drawable/question_img"
                    android:layout_margin="2dp"
                    android:id="@+id/iv_22"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"
                   />
            <Button
                android:background="@drawable/question_img"
                    android:layout_margin="2dp"
                    android:id="@+id/iv_23"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"/>
            <Button
                android:background="@drawable/question_img"
                    android:layout_margin="2dp"
                    android:id="@+id/iv_24"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/question_img"
                    android:layout_margin="2dp"
                    android:id="@+id/iv_31"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"
                    />
            <Button
                android:background="@drawable/question_img"
                    android:layout_margin="2dp"
                    android:id="@+id/iv_32"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"/>
            <Button
                android:background="@drawable/question_img"
                    android:layout_margin="2dp"
                    android:id="@+id/iv_33"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"/>
                <Button
                    android:background="@drawable/question_img"
                    android:layout_margin="2dp"
                    android:id="@+id/iv_34"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerInside"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/match_game_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back" />
</LinearLayout>
