<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:layout_marginTop="10dp"
    android:gravity="center">
 \
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal"
            android:gravity="center">
                <Button
                    android:background="@drawable/question_img"
                    android:layout_margin="2dp"
                    android:id="@+id/start_question"
                    android:layout_weight="1"
                    android:layout_width="130dp"
                    android:layout_height="180dp"
                    android:scaleType="centerInside"
                    />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

                <Button
                    android:background="@drawable/b_img"
                    android:layout_margin="5dp"
                    android:id="@+id/ans_a"
                    android:layout_weight="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside"
                    android:text="b"
                    />
                <Button
                    android:background="@drawable/t_img"
                    android:layout_margin="5dp"
                    android:id="@+id/ans_b"
                    android:layout_weight="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside"
                    android:text="goat"
                    />
                <Button
                    android:background="@drawable/s_img"
                    android:layout_margin="5dp"
                    android:id="@+id/ans_c"
                    android:layout_weight="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside"
                    android:text="fish"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

                <Button
                    android:background="@drawable/n_img"
                    android:layout_margin="5dp"
                    android:id="@+id/ans_d"
                    android:layout_weight="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside"
                    android:text="snake"
                    />
                <Button
                    android:background="@drawable/m_img"
                    android:layout_margin="5dp"
                    android:id="@+id/ans_e"
                    android:layout_weight="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside"
                    android:text="m"/>
                <Button
                    android:background="@drawable/k_img"
                    android:layout_margin="5dp"
                    android:id="@+id/ans_f"
                    android:layout_weight="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside"
                    android:text="monkey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">

                <Button
                    android:background="@drawable/i_img"
                    android:layout_margin="5dp"
                    android:id="@+id/ans_g"
                    android:layout_weight="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside"
                    android:text="lion"
                    />
                <Button
                    android:background="@drawable/g_img"
                    android:layout_margin="5dp"
                    android:id="@+id/ans_h"
                    android:layout_weight="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside"
                    android:text="pengg"/>
                <Button
                    android:background="@drawable/f_img"
                    android:layout_margin="5dp"
                    android:id="@+id/ans_i"
                    android:layout_weight="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerInside"
                    android:text="f"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

                <Button
                    android:gravity="center"
                    android:id="@+id/letter_game_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/back" />
        </LinearLayout>

</LinearLayout>
